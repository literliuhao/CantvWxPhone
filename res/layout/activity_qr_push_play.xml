<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/iv_qrcode"
        android:layout_width="@dimen/dimen_480px"
        android:layout_height="@dimen/dimen_480px"
        android:layout_marginTop="@dimen/dimen_263px"
        android:layout_marginStart="@dimen/dimen_185px"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_logo"
        />
	<ImageView 
	    android:id="@+id/iv_succeed_hint"
	    android:layout_width="@dimen/dimen_1143px"
	    android:layout_height="@dimen/dimen_84px"
	    android:layout_marginBottom="@dimen/dimen_80px"
	    android:layout_alignParentBottom="true"
	    android:visibility="invisible"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/success_qr_hint"
	    />
	
</RelativeLayout>
